<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="edit_project_department" model="ir.ui.view">
    <field name="name">edit.project.department</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.edit_project"/>
    <field name="arch" type="xml">
      <xpath expr="//notebook" position="inside">
        <page string="Timeline">
          <field name="timeline_duration" widget="float_time" options="{'unit': 'hour'}" />
          <field name="timeline_ids">
            <group>
              <field name="timeline_duration_display" />
            </group>
            <tree create="0" edit="0">
              <field name="task_id" />
              <field name="employee_id" />
              <field name="start_date" />
              <field name="end_date" />
              <field name="duration_display" />
              <field name="state" widget="badge"
                     decoration-success="state == 'stopped'"
                     decoration-danger="state == 'running'" />
            </tree>
          </field>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
